<div class="col-md-12">
  <div class="group">
    <%= link_to('New Group', new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <p id="notice"><%= notice %></p>

  <h2>Groups</h2>

  <table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Creator</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>#</td>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.user.email %></td> 
        <td><%= link_to('Edit', edit_group_path(group), class: "btn btn-sm btn-default") %></td>
        <td><%= link_to('Destroy', group, class: "btn btn-sm btn-default", method: :delete, data: { confirm: 'Are you sure?' })%></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
